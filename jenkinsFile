pipeline {
    agent any

    environment {
        // Jenkins credentials ID (Username + DockerHub token)
        DOCKERHUB_CREDS = credentials('dockerhub-creds')

        DOCKERHUB_USERNAME = 'markazidev2005'

        BACKEND_IMAGE  = "${DOCKERHUB_USERNAME}/react-flask-mongodb-v1_api"
        FRONTEND_IMAGE = "${DOCKERHUB_USERNAME}/react-flask-mongodb-v1_client"

        TAG = "${BUILD_NUMBER}"
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'üì• Cloning repository...'
                git branch: 'main',
                    url: 'https://github.com/Markazi-Abdo/docker_jenkins_project'
            }
        }

        stage('Build Backend Image') {
            steps {
                echo 'üê≥ Building Backend image...'
                dir('backend') {
                    sh """
                      docker build -t ${BACKEND_IMAGE}:latest .
                      docker tag ${BACKEND_IMAGE}:latest ${BACKEND_IMAGE}:${TAG}
                    """
                }
            }
        }

        stage('Build Frontend Image') {
            steps {
                echo 'üê≥ Building Frontend image...'
                dir('frontend') {
                    sh """
                      docker build -t ${FRONTEND_IMAGE}:latest .
                      docker tag ${FRONTEND_IMAGE}:latest ${FRONTEND_IMAGE}:${TAG}
                    """
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                echo 'üîê Logging into Docker Hub...'
                sh """
                  echo ${DOCKERHUB_CREDS_PSW} | docker login \
                    -u ${DOCKERHUB_CREDS_USR} \
                    --password-stdin
                """
            }
        }

        stage('Push Images') {
            steps {
                echo 'üöÄ Pushing images to Docker Hub...'
                sh """
                  docker push ${BACKEND_IMAGE}:latest
                  docker push ${BACKEND_IMAGE}:${TAG}
                  docker push ${FRONTEND_IMAGE}:latest
                  docker push ${FRONTEND_IMAGE}:${TAG}
                """
            }
        }

        stage('Cleanup') {
            steps {
                echo 'üßπ Cleaning local Docker images...'
                sh """
                  docker rmi ${BACKEND_IMAGE}:latest ${BACKEND_IMAGE}:${TAG} || true
                  docker rmi ${FRONTEND_IMAGE}:latest ${FRONTEND_IMAGE}:${TAG} || true
                """
            }
        }
    }

    post {
        always {
            sh 'docker logout || true'
        }
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed ‚Äî check logs.'
        }
    }
}